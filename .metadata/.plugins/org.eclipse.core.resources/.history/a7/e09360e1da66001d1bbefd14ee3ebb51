<mapper namespace="memberMapper">

	<!-- MEMBER 테이블로부터 조회된 내용을 Member 타입으로 가공해 주는 ResultMap -->
	<resultMap>
		
	</resultMap>
	
	<!-- 로그인용 쿼리문 -->
	<select id="loginMember" parameterType="member">
		SELECT *
		FROM MEMBER
		WHERE USER_ID = #{userId}
		AND USER_PWD = #{userPwd}
		AND STATUS = 'Y'	
	</select>
</mapper>
